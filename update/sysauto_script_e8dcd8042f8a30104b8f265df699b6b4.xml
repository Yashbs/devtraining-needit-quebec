        <script><![CDATA[//To get the current time//
var rightnow = GlideDateTime();
var after24fromnow = gs.hoursAgo(-24);

//To scan through the records in needittask table//

var overDueNITask = new GlideRecord('x_58872_needit_needit_task');
overDueNITask.addQuery('due_date','>=',rightnow);
overDueNITask.addQuery('due_date','<',after24fromnow);
overDueNITask.addQuery('state','!=',3);
overDueNITask.query();

while(overDueNITask.next()){
	
	gs.info("the records to expire in next 24 hours" + overDueNITask.number);
	gs.eventQueue('x_58872_needit.dueSoonNeedItTasks',overDueNITask,overDueNITask.number,gs.getUserName());
}]]></script>
